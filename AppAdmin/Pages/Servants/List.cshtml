@section scripts{

    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $("#ServantsDatatable").DataTable({
                "filter": true,
                "ajax": {
                    url: "?handler=displayServants",
                    dataSrc: ""
                },
                columns: [
                    {
                        
                        data: 'id',
                        "render": function (data) {
                            return '<a href="/servant/edit/' + data + '" ><i class="fas fa-edit"></i></a> &nbsp;<a onclick="confirmDelete(' + data + ')"  > <i class="fas fa-trash" > </i></a > ';
                        }
                    },
                    {
                        title: 'الخادم',
                        data: 'name'
                    },
                    {
                        title: 'الصورة',
                        data: 'photo',
                        "render": function (data) { return '<img src="/photos/الخدام/' + data + '" />'; }
                    },


                    {
                        title: 'الفصل',
                        data: 'className'
                    },
                    {
                        title: 'التليفون',
                        data: 'phone'
                    },
                    {
                        title: 'العنوان',
                        data: 'address'
                    },
                    {
                        title: 'اب الاعتراف',
                        data: 'fatherOfConfession'
                    },
                    {
                        title: 'تاريخ الميلاد',
                        data: 'birthday'
                    },
                
                   
                ]

            });
        });
    </script>
    <script>
        function confirmDelete(id) {
            if (confirm("هل متاكد انك تريد مسح الفصل")) {

                window.location.href = `?handler=Delete&id=${id}`;
            }
        }
    </script>
}