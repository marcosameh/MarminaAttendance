@page
@model App.UI.Pages.Serveds.ListModel
@{
    ViewData["Title"] = "المخدومين";
}

@section Styles {
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/css/form-styles.css" rel="stylesheet" />
    <style>
        .dataTables_wrapper .dataTables_filter input,
        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
            border: 1px solid #ddd;
            padding: 4px 10px;
        }

        .btn .material-symbols-rounded {
            vertical-align: middle;
            font-size: 18px;
        }

        table.dataTable td {
            vertical-align: middle;
        }

        #ServedsDatatable_wrapper {
            direction: rtl;
            text-align: right;
        }

        #ServedsDatatable thead th {
            text-align: right;
        }

        /* Enhanced action buttons */
        .action-btn {
            min-width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .action-btn i {
            font-size: 16px;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

        .action-btn-text {
            font-size: 12px;
            margin-right: 4px;
        }

        /* Enhanced form styling */
        #Served-form {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }

        #Served-form .form-control,
        #Served-form .form-select {
            border: 1px solid #d2d6da !important;
            background-color: #fff !important;
        }
    </style>
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header p-3" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#Served-form" aria-expanded="false">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 text-dark fw-bold">اضافة مخدوم جديد</h6>
                        <span id="toggle-arrow-served" class="fa fa-angle-down text-dark"></span>
                    </div>
                </div>
                <div class="collapse" id="Served-form">

                    <form method="post" class="p-3" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="Served-name" class="form-label">الاسم</label>
                                <input type="text" class="form-control" asp-for="Served.Name" id="Served-name" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-phone" class="form-label">رقم التليفون</label>
                                <input type="text" class="form-control" asp-for="Served.Phone" id="Served-phone" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Guardian-phone" class="form-label">تليفون ولي الأمر</label>
                                <input type="text" class="form-control" asp-for="Served.HomePhone" id="Guardian-phone">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-class" class="form-label">الفصل</label>
                                <select class="form-control" id="Served-class" asp-for="Served.ClassId" required>
                                    @foreach (var item in Model.Classes)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-address" class="form-label">العنوان</label>
                                <input type="text" class="form-control" asp-for="Served.Address" id="Served-address" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-father-name" class="form-label">اب الاعتراف</label>
                                <input type="text" class="form-control" asp-for="Served.FatherOfConfession" id="Served-father-name">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-birthdate" class="form-label">تاريخ الميلاد</label>
                                <input type="date" class="form-control" asp-for="Served.Birthday" id="Served-birthdate" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="Served-image" class="form-label">الصورة</label>
                                <input type="file" class="form-control" asp-for="Served.PhotoFile" id="Served-image" accept="image/*">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="responsible-Servant" class="form-label">الخادم المسوؤل</label>
                                <select class="form-control" id="responsible-Servant" asp-for="Served.ResponsibleServantId">
                                </select>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary">اضافة</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body px-3 pb-4">
                    <h6 class="mb-3 text-dark fw-bold">قائمة المخدومين</h6>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle mb-0" id="ServedsDatatable" style="width:100%">
                            <thead class="bg-light text-dark">
                                <tr>
                                    <th></th>
                                    <th>المخدوم</th>
                                    <th>الكود</th>
                                    <th>الصورة</th>
                                    <th>الفصل</th>
                                    <th>التليفون</th>
                                    <th>اب الاعتراف</th>
                                    <th>تاريخ الميلاد</th>
                                    <th>الخادم المسوؤل</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $("#ServedsDatatable").DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ar.json'
                },
                dom: '<"row mx-2 mt-2 mb-3"<"col-md-6 text-start"l><"col-md-6 text-end"f>>t<"row mx-2 mt-3 mb-2"<"col-md-6"i><"col-md-6"p>>',
                drawCallback: function() {
                    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                    tooltipTriggerList.map(function (tooltipTriggerEl) {
                        return new bootstrap.Tooltip(tooltipTriggerEl);
                    });
                },
                ajax: {
                    url: "?handler=displayServeds",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                <div class="d-flex gap-1 flex-wrap">
                                    <a href="/Served/edit/${data}" class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="tooltip" title="تعديل بيانات المخدوم">
                                        <i class="fas fa-edit"></i>
                                        <span class="action-btn-text d-none d-lg-inline">تعديل</span>
                                    </a>
                                    <a href="javascript:void(0)" onclick="confirmDelete(${data})" class="btn btn-sm btn-outline-danger action-btn" data-bs-toggle="tooltip" title="حذف المخدوم">
                                        <i class="fas fa-trash"></i>
                                        <span class="action-btn-text d-none d-lg-inline">حذف</span>
                                    </a>
                                    
                                </div>
                            `;
                        }
                    },
                    { data: 'name' },
                    { data: 'id' },
                    {
                        data: 'photoPath',
                        render: function (data) {
                            return `<img src="${data}" alt="صورة المخدوم" class="rounded" style="width:60px;height:60px;object-fit:cover"/>`;
                        }
                    },
                    { data: 'className' },
                    { data: 'phone' },
                    { data: 'fatherOfConfession' },
                    { data: 'birthday' },
                    { data: 'responsibleServant' }
                ]
            });
        });

        function confirmDelete(id) {
            if (confirm("هل متأكد أنك تريد حذف هذا المخدوم؟")) {
                window.location.href = `?handler=Delete&id=${id}`;
            }
        }

        // Toggle arrow icon when collapse is shown/hidden
        $('#Served-form').on('show.bs.collapse', function () {
            $('#toggle-arrow-served').removeClass('fa-angle-down').addClass('fa-angle-up');
        });
        $('#Served-form').on('hide.bs.collapse', function () {
            $('#toggle-arrow-served').removeClass('fa-angle-up').addClass('fa-angle-down');
        });
    </script>


    <script>
        $(document).ready(function () {
            // Function to load responsible servants based on the selected class ID
            function loadResponsibleServants(classId) {
                if (classId) {
                    // Make an AJAX request to fetch responsible servants
                    $.ajax({
                        url: '/api/responsible-servant/' + classId,
                        type: 'GET',
                        success: function (data) {
                            // Clear existing options in the responsible servant dropdown
                            $('#responsible-Servant').empty();

                            // Add the new options based on the API response
                            $.each(data, function (key, value) {
                                $('#responsible-Servant').append($('<option>', {
                                    value: value.id,
                                    text: value.name
                                }));
                            });
                        },
                        error: function () {
                            alert('Error fetching responsible servants');
                        }
                    });
                } else {
                    // If no class is selected, clear the responsible servant dropdown
                    $('#responsible-Servant').empty();
                }
            }

            // Load responsible servants on page load based on the default class ID
            var defaultClassId = $("#Served-class").val();
            loadResponsibleServants(defaultClassId);

            // Event listener for changes in the class dropdown
            $("#Served-class").change(function () {
                var classId = $(this).val();
                loadResponsibleServants(classId);
            });
        });
    </script>


   
}