@page
@model App.UI.Pages.Servant.public_addModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>خادم جديد</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="/assets/vendors/select2/select2.min.css" />
    <link rel="stylesheet" href="/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/custom-css.css" />
    <link rel="stylesheet" href="/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />
    <link rel="shortcut icon" href="/assets/images/favicon.png" />

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #007bff;
        }

        .form-container {
            background-color: #ffffff;
            margin: 100px auto;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }



        @@media (max-width: 576px) {
            .form-container {
                padding: 15px;
            }

                .form-container h2 {
                    font-size: 1.5rem;
                }

            .form-group label {
                font-size: 0.8rem;
            }

            .form-control {
                padding: 0.375rem 0.75rem;
                font-size: 0.8rem;
            }

            .form-group.form-check {
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="col-lg-6 move-down stretch-card mx-auto">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">اضافة خادم جديد</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Servant.Name">الاسم</label>
                        <input type="text" asp-for="Servant.Name" class="form-control" id="exampleInputUsername1" placeholder="الاسم" required />
                        <span asp-validation-for="Servant.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.Email">الايميل</label>
                        <input type="email" class="form-control" asp-for="Servant.Email" id="exampleInputEmail1" placeholder="الايميل" required />
                        <span asp-validation-for="Servant.Email" class="text-danger"></span>
                       
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.Password">كلمة السر</label>
                        <input type="password" asp-for="Servant.Password" class="form-control" placeholder="كلمة السر" />
                        <span asp-validation-for="Servant.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.ConfirmPassword">تاكيد كلمة السر</label>
                        <input type="password" class="form-control" asp-for="Servant.ConfirmPassword" placeholder="تاكيد كلمة السر" />
                        <span asp-validation-for="Servant.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.Phone">التليفون</label>
                        <input type="text" asp-for="Servant.Phone" class="form-control" placeholder="التليفون" required />
                        <span asp-validation-for="Servant.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.Address">العنوان</label>
                        <input type="text" class="form-control" asp-for="Servant.Address" placeholder="العنوان" required />
                        <span asp-validation-for="Servant.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.FatherOfConfession">اب الاعتراف</label>
                        <input type="text" class="form-control" asp-for="Servant.FatherOfConfession" placeholder="اب الاعتراف" required />
                        <span asp-validation-for="Servant.FatherOfConfession" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Servant.ClassId">الفصل</label>
                        <select class="form-control form-control-lg" asp-for="Servant.ClassId" required>
                            <option value="" selected disabled>الفصل</option>
                            @foreach (var item in Model.Classes)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Servant.ClassId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label>صورة المستخدم</label>
                        <input type="file" asp-for="Servant.PhotoFile" class="file-upload-default" />
                        <span asp-validation-for="Servant.PhotoFile" class="text-danger"></span>
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="رفع صورة" />
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button"> Upload </button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="remember-me" asp-for="Servant.ReceiveReminderEmails">
                        <label class="form-check-label" for="remember-me">الحصول على ايميل الافتقاد</label>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2"> تسجيل </button>

                </form>
            </div>
        </div>
    </div>
    <!-- container-scroller -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            var notificationType = '@TempData["NotificationType"]';
            if (message) {
                if (notificationType === "success") {
                    toastr.success(message);
                } else {
                    toastr.error(message);
                }
            }
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>




