@page
@model App.UI.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

@section Styles {
    <link href="~/css/form-styles.css" rel="stylesheet" />
    <style>
        .password-card {
            max-width: 500px;
            margin: 0 auto;
        }
    </style>
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow password-card">
                <div class="card-header p-3">
                    <h6 class="mb-0 text-dark fw-bold">
                        <i class="fas fa-key me-2"></i>
                        تغيير كلمة المرور
                    </h6>
                </div>
                <div class="card-body px-4 pb-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label for="current-password" class="form-label">كلمة المرور الحالية <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="current-password" asp-for="Input.CurrentPassword" required>
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="new-password" class="form-label">كلمة المرور الجديدة <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="new-password" asp-for="Input.NewPassword" required>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            <small class="text-muted">يجب أن تكون كلمة المرور 6 أحرف على الأقل</small>
                        </div>

                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">تأكيد كلمة المرور الجديدة <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="confirm-password" asp-for="Input.ConfirmPassword" required>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/classes/list" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right me-1"></i> رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
