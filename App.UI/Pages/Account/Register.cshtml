@page

@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-lg-6 move-down stretch-card mx-auto">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">اضافة مستخدم جديد</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Input.UserName">اسم المستخدم</label>
                    <input type="text" asp-for="Input.UserName" class="form-control" id="exampleInputUsername1" placeholder="اسم المستخدم" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
            @*    <div class="form-group">
                    <label asp-for="Input.Email">Email address</label>
                    <input type="email" class="form-control" asp-for="Input.Email" id="exampleInputEmail1" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Input.Password">كلمة السر</label>
                    <input type="password" asp-for="Input.Password" class="form-control" id="exampleInputPassword1" placeholder="كلمة السر" />
                     <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">تاكيد كلمة السر</label>
                    <input type="password" class="form-control" id="exampleInputConfirmPassword1" asp-for="Input.ConfirmPassword" placeholder="تاكيد كلمة السر" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role">الدور</label>
                    <select class="form-control form-control-lg" asp-for="Input.Role">                     
                            <option value="SuperAdmin">Super Admin</option>
                            <option value="Admin">Admin</option>                  
                            <option value="Servant">Servant</option>                  
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>صورة المستخدم</label>
                    <input type="file" asp-for="Input.Photo" class="file-upload-default" />
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="رفع صورة" />
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button"> Upload </button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2"> تسجيل </button>
              
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
